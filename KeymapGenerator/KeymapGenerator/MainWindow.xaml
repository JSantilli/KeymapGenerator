<Window x:Class="KeymapGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="MainWindow" Height="463" Width="840">
    
    <Grid>
        <Grid x:Name="KeymapContainer" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="600" Margin="123,98,0,0">
        </Grid>

        <Label x:Name="lblSelectLayer" Content="Select Layer:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="90,14,0,0" ItemsSource="{Binding CbItems}" SelectedItem="{Binding SelectedCbItem}" SelectionChanged="ComboBox_SelectionChanged"/>
        <Label x:Name="LblNewLayer" Content="New Layer:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="271,10,0,0"/>
        <TextBox x:Name="TxtAddLayer" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120" Margin="342,13,0,0" 
                 Text="{Binding AddLayerName}" />
        <Button Content="Add Layer" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="481,16,0,0" Click="Button_Click"/>
    </Grid>
</Window>
