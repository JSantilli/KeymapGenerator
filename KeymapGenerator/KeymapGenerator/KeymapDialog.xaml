<Window x:Class="KeymapGenerator.KeymapDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KeymapDialog" Height="192" Width="300">
    <Grid>
        <Label Content="Keymap Type:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Label Content="Associated Layer:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0"/>
        <Label Content="Key Press:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="AssociatedLayer" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="125,45,0,0"/>
        <TextBox x:Name="KeyPress" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="125,76,0,0"/>
        <ComboBox x:Name="KeymapTypeCombo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="125,14,0,0"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="108,131,0,0" VerticalAlignment="Top" Width="75" Click="OKButton_Click"/>

    </Grid>
</Window>
